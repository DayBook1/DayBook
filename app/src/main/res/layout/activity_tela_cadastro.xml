<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.daybook.TelaCadastro">


        <EditText
            android:id="@+id/nomeCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/sobrenomeCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:ems="10"
            android:hint="Sobrenome"
            android:inputType="textPersonName"
            android:layout_below="@+id/nomeCadastro"
            android:layout_alignLeft="@+id/nomeCadastro"
            android:layout_alignStart="@+id/nomeCadastro" />

        <EditText
            android:id="@+id/emailCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/sobrenomeCadastro"
            android:layout_alignLeft="@+id/sobrenomeCadastro"
            android:layout_alignStart="@+id/sobrenomeCadastro" />

        <EditText
            android:id="@+id/senhaCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_below="@+id/emailCadastro"
            android:layout_alignLeft="@+id/emailCadastro"
            android:layout_alignStart="@+id/emailCadastro" />

        <Button
            android:id="@+id/btCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irTelaLogin"
            android:text="cadastrar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp" />

</RelativeLayout>

