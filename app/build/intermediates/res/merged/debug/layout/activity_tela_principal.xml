<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.daybook.TelaPrincipal">

    <Button
        android:id="@+id/btAddItem"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:onClick="addNovo"
        android:text="novo" />

    <Button
        android:id="@+id/btVerLembretes"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/btVerMateria"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btVerMateria"
        android:layout_marginTop="81dp"
        android:onClick="verLembretes"
        android:text="ver lembretes" />

    <Button
        android:id="@+id/btVerMateria"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        android:onClick="VerMaterias"
        android:text="ver materias" />

    <Button
        android:id="@+id/btVerEvento"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/btVerMateria"
        android:layout_alignStart="@+id/btVerMateria"
        android:layout_below="@+id/btVerMateria"
        android:layout_marginTop="54dp"
        android:onClick="verEventos"
        android:text="ver eventos" />


</RelativeLayout>